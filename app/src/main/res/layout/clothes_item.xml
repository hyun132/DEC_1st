<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:layout_constraintWidth_percent="0.9"
    android:layout_height="wrap_content"
    android:padding="8dp"
    app:layout_constraintDimensionRatio="1:1.1"
    app:layout_constraintHorizontal_weight="1">

    <ImageView
        android:id="@+id/clothes_imageview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/round_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:outlineProvider="bounds"/>

    <ImageView
        android:id="@+id/clothes_liked"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_nav_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorPrimary" />

    <TextView
        android:id="@+id/discount_percent_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:text="25%"
        android:textColor="@color/colorActive"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clothes_imageview" />

    <TextView
        android:id="@+id/clothes_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18,800"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/discount_percent_textview"
        app:layout_constraintStart_toEndOf="@+id/discount_percent_textview"
        app:layout_constraintTop_toTopOf="@+id/discount_percent_textview" />

    <TextView
        android:id="@+id/clothes_market_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="블루씨티"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discount_percent_textview" />

    <TextView
        android:id="@+id/clothes_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="[무료배송]무드 빈티지 카라 니트 가디건"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clothes_market_name" />

    <TextView
        android:id="@+id/clothes_item_salesrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="2,307개 주문중"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clothes_item_name" />


</androidx.constraintlayout.widget.ConstraintLayout>